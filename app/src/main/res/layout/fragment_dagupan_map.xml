<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DagupanMap">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dagupan Campus Vicinity Map"
                android:textColor="#597445"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:text="PHINMA-University of Pangasinan, 28WV+R2R, Arellano St, Downtown District, Dagupan, 2400 Pangasinan"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="210dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/dagupsbuilding" />

            <ImageView
                android:layout_width="350dp"
                android:layout_height="210dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dagupsmap" />

            <ImageView
                android:layout_width="350dp"
                android:layout_height="210dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dagupsentrance1" />


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>