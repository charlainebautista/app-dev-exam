<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModalityHelp">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/tvHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modality Help"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <!-- Programs Section -->
            <TextView
                android:id="@+id/tvProgramsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <Button
                android:id="@+id/btnFLEXProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FLEX Program"
                android:textSize="16sp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnRADProgram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RAD Program"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <!-- Colleges and Departments Section -->
            <TextView
                android:id="@+id/tvCollegesHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colleges and Departments"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <Button
                android:id="@+id/btnCollegeOfScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College of Science"
                android:textSize="16sp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnCollegeOfEngineering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College of Engineering"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginTop="8dp"/>

            <!-- Add more buttons for other colleges and departments as needed -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>